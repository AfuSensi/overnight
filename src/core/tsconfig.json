{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src/",
    "outDir": "lib/",
    "declarationDir": "lib/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "importHelpers": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "core/lib",
    "dist"
  ]
}